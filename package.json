{
  "name": "@ssml-editor/ssml-editor",
  "private": true,
  "version": "1.0.1",
  "homepage": "https://github.com/ssml-editor/ssml-editor/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ssml-editor/ssml-editor.git"
  },
  "license": "MIT",
  "author": "hz <beijingren@vip.qq.com>",
  "keywords": [
    "ssml-editor",
    "ssml",
    "editor",
    "slate",
    "slate-editor"
  ],
  "packageManager": "pnpm@10.22.0",
  "workspaces": [
    "packages/*",
    "example",
    "website"
  ],
  "engines": {
    "node": ">=22.12.0",
    "pnpm": ">=10.22.0"
  },
  "scripts": {
    "start": "pnpm dev:website",
    "start:cn": "pnpm dev:website:cn",
    "dev:example": "pnpm --filter=@ssml-editor/example dev",
    "dev:website": "pnpm --filter=@ssml-editor/website start",
    "dev:website:cn": "pnpm --filter=@ssml-editor/website start:cn",
    "build:all": "pnpm build:packages && pnpm build:example && pnpm build:website",
    "build:packages": "pnpm build:base && pnpm build:utils && pnpm build:modules && pnpm build:core && pnpm build:vue && pnpm build:editor-vue",
    "build:vue": "pnpm --filter=@ssml-editor/vue build",
    "build:core": "pnpm --filter=@ssml-editor/core build",
    "build:base": "pnpm --filter=@ssml-editor/base build",
    "build:utils": "pnpm --filter=@ssml-editor/utils build",
    "build:example": "pnpm --filter=@ssml-editor/example build",
    "build:modules": "pnpm --filter=@ssml-editor/modules build",
    "build:editor-vue": "pnpm --filter=@ssml-editor/editor-vue build",
    "build:website": "pnpm --filter=@ssml-editor/website build",
    "deploy": "pnpm build:all && shx cp -fr ./example/dist ./website/build/example/ && pnpm --filter=@ssml-editor/website deploy",
    "test:publish": "pnpm -r publish --no-git-checks --force --dry-run --json",
    "publish:next": "pnpm -r publish --tag=next --force --report-summary",
    "promote:latest": "npm dist-tag add @ssml-editor/base:$npm_package_version latest && pnpm dist-tag add @ssml-editor/utils:$npm_package_version latest && pnpm dist-tag add @ssml-editor/modules:$npm_package_version latest && pnpm dist-tag add @ssml-editor/core:$npm_package_version latest && pnpm dist-tag add @ssml-editor/vue:$npm_package_version latest && pnpm dist-tag add @ssml-editor/editor-vue:$npm_package_version latest",
    "unpublish": "npm unpublish @ssml-editor/base:$npm_package_version --force && npm unpublish @ssml-editor/utils:$npm_package_version --force && npm unpublish @ssml-editor/modules:$npm_package_version --force && npm unpublish @ssml-editor/core:$npm_package_version --force && npm unpublish @ssml-editor/vue:$npm_package_version --force && npm unpublish @ssml-editor/editor-vue:$npm_package_version --force"
  },
  "peerDependencies": {
    "element-plus": "^2.0.0",
    "vue": "^3.5.0"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.2",
    "@highlightjs/vue-plugin": "^2.1.0",
    "@popperjs/core": "^2.11.8",
    "@types/lodash": "^4.17.20",
    "@vueuse/core": "^14.0.0",
    "cmu-pronouncing-dictionary": "^3.0.0",
    "file-saver": "^2.0.5",
    "highlight.js": "^11.11.1",
    "howler": "^2.2.4",
    "is-what": "^5.5.0",
    "localforage": "^1.10.0",
    "lodash": "^4.17.21",
    "mathjs": "^15.1.0",
    "pinyin-pro": "^3.27.0",
    "pinyinize": "^3.3.1",
    "slate-vue3": "^0.9.3",
    "typescript-event-emitter": "^2.1.0",
    "xml-formatter": "^3.6.7"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.15.0",
    "@tailwindcss/postcss": "^4.1.17",
    "@tailwindcss/vite": "^4.1.17",
    "@types/file-saver": "^2.0.7",
    "@types/howler": "^2.2.12",
    "@types/node": "^24.10.1",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitejs/plugin-vue-jsx": "^5.1.1",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "csstype": "^3.1.3",
    "element-plus": "^2.11.7",
    "eslint": "^9.39.1",
    "eslint-plugin-vue": "^10.5.1",
    "postcss": "^8.5.6",
    "postcss-nested": "^7.0.2",
    "prettier": "^3.6.2",
    "rimraf": "^6.1.0",
    "rollup-plugin-copy": "catalog:",
    "shx": "^0.4.0",
    "tailwind-scrollbar": "^4.0.2",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3",
    "unplugin-element-plus": "^0.11.1",
    "vite": "^7.2.2",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-html": "^3.2.2",
    "vue": "^3.5.24",
    "vue-tsc": "^3.1.3"
  }
}
