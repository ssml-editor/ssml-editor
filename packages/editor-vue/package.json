{
  "name": "@ssml-editor/editor-vue",
  "version": "1.0.4",
  "description": "all editor vue are settled here",
  "homepage": "https://www.ssmleditor.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ssml-editor/ssml-editor.git"
  },
  "bugs": {
    "url": "https://github.com/ssml-editor/ssml-editor/issues"
  },
  "license": "MIT",
  "author": "hz <beijingren@vip.qq.com>",
  "engines": {
    "node": ">=22.12.0",
    "pnpm": ">=10.24.0"
  },
  "type": "module",
  "exports": {
    ".": {
      "style": "./dist/styles/style.css",
      "import": "./es/index.js",
      "types": "./es/index.d.ts",
      "require": "./cjs/index.js"
    },
    "./styles/*": "./dist/styles/*"
  },
  "main": "cjs/index.js",
  "module": "es/index.js",
  "unpkg": "dist/index.full.umd.js",
  "jsdelivr": "dist/index.full.umd.js",
  "types": "es/index.d.ts",
  "files": [
    "dist",
    "es",
    "cjs"
  ],
  "scripts": {
    "start": "pnpm run build",
    "build": "pnpm run rm && pnpm run type-check && pnpm run build:bundle && pnpm run build:modules",
    "build:bundle": "vite build --config vite.config.bundle.ts --mode production",
    "build:modules": "vite build --config vite.config.modules.ts --mode production",
    "type-check": "vue-tsc --noEmit --composite false",
    "rm": "rimraf cjs dist es"
  },
  "peerDependencies": {
    "element-plus": "^2.0.0",
    "vue": "^3.5.0"
  },
  "dependencies": {
    "@element-plus/icons-vue": "catalog:",
    "@highlightjs/vue-plugin": "catalog:",
    "@popperjs/core": "catalog:",
    "@ssml-editor/base": "workspace:^",
    "@ssml-editor/core": "workspace:^",
    "@ssml-editor/modules": "workspace:^",
    "@ssml-editor/utils": "workspace:^",
    "@ssml-editor/vue": "workspace:^",
    "cmu-pronouncing-dictionary": "catalog:",
    "dayjs": "catalog:",
    "file-saver": "catalog:",
    "highlight.js": "catalog:",
    "mathjs": "catalog:",
    "pinyin-pro": "catalog:",
    "pinyinize": "catalog:",
    "slate-vue3": "catalog:",
    "xml-formatter": "catalog:"
  },
  "devDependencies": {
    "@rollup/plugin-terser": "catalog:",
    "@tailwindcss/vite": "catalog:",
    "@types/file-saver": "catalog:",
    "@types/node": "catalog:",
    "@vitejs/plugin-vue": "catalog:",
    "csstype": "catalog:",
    "element-plus": "catalog:",
    "glob": "catalog:",
    "postcss": "catalog:",
    "postcss-nested": "catalog:",
    "rimraf": "catalog:",
    "rollup": "catalog:",
    "rollup-plugin-copy": "catalog:",
    "tailwind-scrollbar": "catalog:",
    "tailwindcss": "catalog:",
    "typescript": "catalog:",
    "unplugin-element-plus": "catalog:",
    "vite": "catalog:",
    "vite-plugin-dts": "catalog:",
    "vue": "catalog:",
    "vue-tsc": "catalog:"
  }
}
